{
  "clock_interval": 10,
  "heartbeat_clocks": 6,
  "node_metrics": {
    "w": {
      "cmd": ["w"],
      "clocks": 6
    },
    "free": {
      "cmd": ["free", "-m"],
      "clocks":6
    },
    "vmstat": {
      "cmd": ["vmstat","1", "2"],
      "clocks": 6
    },
    "netstat": {
      "cmd": ["netstat", "-s"],
      "clocks": 6
    },
    "df": {
      "cmd": ["df", "-h"],
      "clocks":60
    }
  },

  "service_metrics": {
    "pidstat": {
      "cmd":["pidstat", "-rtuh", "-p", "${pid}"],
      "clocks":6
    }
  },

  "services": [
    {
      "name": "reactor",
      "type": "java",
      "java_home": ["/opt/arris/servassure/java/", "/export/home/stargus/java"],
      "lookup": ["ps", "-ef", "|", "grep ", "=Reactor", "|", "grep", "-v", "grep", "|", "awk", "'{print $2}'"],
      "log_home": ["/opt/arris/servassure/log", "/export/home/stargus/log/"],
      "log_pattern": ["reactor.*"]
    }
  ]
}