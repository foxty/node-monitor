{
  "clock_interval": 10,
  "heartbeat_clocks": 6,
  "node_metrics": {
    "dstat-sys": {
      "cmd": ["dstat", "-lyp", "1", "1"],
      "clocks": 6
    },
    "dstat-cpu": {
      "cmd": ["dstat", "-c", "1", "1"],
      "clocks": 6
    },
    "dstat-mem": {
      "cmd": ["dstat", "-msg", "1", "1"],
      "clocks": 6
    },
    "dstat-socket": {
      "cmd": ["dstat", "--socket", "1", "1"],
      "clocks": 6
    },
    "dstat-dio": {
      "cmd": ["dstat", "-dr", "1", "1"],
      "clocks": 6
    },
    "w": {
      "cmd": ["w"],
      "clocks": 6
    },
    "free": {
      "cmd": ["free", "-m"],
      "clocks":6
    },
    "vmstat": {
      "cmd": ["vmstat","1", "2"],
      "clocks": 6
    },
    "netstat": {
      "cmd": ["netstat", "-s"],
      "clocks": 6
    },
    "df": {
      "cmd": ["df", "-kP"],
      "clocks":60
    }
  },

  "service_metrics": {
    "pidstat": {
      "type": "all",
      "cmd": ["pidstat", "-rtuh", "-p", "${pid}"],
      "clocks":6
    },
    "jstat-gc": {
      "type": "java",
      "cmd": ["${java_home}", "-gc", "${pid}"]
    }
  },

  "services": [{
      "name": "reactor",
      "type": "java",
      "lookup_keyword": "-Dprocess=Reactor",
      "env" : {
        "java_home": ["/opt/arris/servassure/jdk1.8.0_40/", "/export/home/stargus/jdk1.8.0_40"],
        "log_home": ["/opt/arris/servassure/log", "/export/home/stargus/log/"]
      },
      "log_pattern": ["reactor.*"],
      "clocks": 6
    },{
      "name": "collector",
      "type": "java",
      "lookup_keyword": "-Dprocess=Collector",
      "env" : {
        "java_home": ["/opt/arris/servassure/jdk1.8.0_40/", "/export/home/stargus/jdk1.8.0_40"],
        "log_home": ["/opt/arris/servassure/log", "/export/home/stargus/log/"]
      },
      "log_pattern": ["collection_manager.log", "snmp_poller.log"],
      "clocks": 6
    }
  ]
}